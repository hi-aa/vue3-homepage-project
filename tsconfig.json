{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "target": "esnext",
    "module": "esnext"
  },
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
